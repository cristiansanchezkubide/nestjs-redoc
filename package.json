{
  "name": "@cristiansanchezkubide/nestjs-redoc",
  "version": "1.0.1",
  "description": "NestJS module to use Redoc",
  "author": {
    "name": "Cristian Sánchez",
    "email": "devcristiansanchez@gmail.com"
  },
  "main": "dist/index.js",
  "private": false,
  "license": "MIT",
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "npm:check:updates": "ncu -i --format group",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:clear": "npx jest --clearCache",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "release": "release-it --ci",
    "release:minor": "release-it minor --ci",
    "release:patch": "release-it patch --ci",
    "release:major": "release-it major --ci"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.5",
    "@nestjs/swagger": "^7.1.1",
    "reflect-metadata": "^0.1.13"
  },
  "dependencies": {
    "express-basic-auth": "^1.2.1",
    "express-handlebars": "^7.0.7",
    "joi": "^17.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.6",
    "@babel/preset-env": "^7.22.6",
    "@babel/preset-typescript": "^7.22.5",
    "@jest/globals": "^29.6.0",
    "@nestjs/core": "^10.0.5",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/testing": "^10.0.5",
    "@types/express": "^4.17.17",
    "@types/express-handlebars": "^6.0.0",
    "@types/hapi__joi": "^17.1.9",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "babel-jest": "^29.6.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.6.0",
    "npm-check-updates": "^16.10.13",
    "prettier": "^2.8.3",
    "reflect-metadata": "^0.1.13",
    "release-it": "^16.0.0",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run prepare",
        "npm run format",
        "npm run lint",
        "npm run build",
        "npm run test"
      ],
      "after:release": "echo ✅ Successfully released ${name} v${version} to ${npm.name}."
    },
    "npm": {
      "publish": true,
      "timeout": 100000
    },
    "github": {
      "release": true,
      "timeout": 100000
    },
    "git": {
      "commit": true,
      "commitMessage": "chore: release v${version}",
      "tag": true,
      "tagName": "v${version}",
      "push": true,
      "requireCleanWorkingDir": false,
      "interactive": true
    }
  }
}
